<!--components/v-picker-region/v-picker-region.wxml-->
<view class="section">  
  <view class="section__title">{{title}}</view>  
  <picker mode="region" bindchange="bindRegionChange" value="{{region}}">  
    <view class="picker">  
      <view class='words'>
        {{region[0]}}，{{region[1]}}，{{region[2]}}
      </view>
      <image src='/image/right.png'></image>  
    </view>  
  </picker>  
</view>  